        function updateTotal() {
            const subtotal = cart.reduce((s, it) => s + it.price, 0);
            let shipping = (document.getElementById('del-method').value === 'delivery') ? parseInt(document.getElementById('area-select').value) : 0;
            document.getElementById('total-price').innerText = `Ø§Ù„Ø¥Ø¬Ù…Ø§Ù„ÙŠ: ${(subtotal + shipping).toFixed(2)} Ø¬.Ù…`;
        }

