        function addPieceSearch(cat, i) { const p = database[cat][i], q = document.getElementById(`s-q-${cat}-${i}`).value; addToCart(p.name, q * p.price, `${q} Ù‚Ø·Ø¹Ø©`); }

        function addMix(title) {
            let subs = document.querySelectorAll('.mix-sub'), details = [], total = 0;
            subs.forEach(s => {
                if (s.value > 0) {
                    let w = parseFloat(s.value), p = parseFloat(s.dataset.price);
                    details.push(`${s.dataset.name} (${w}Ø¬Ù…)`);
                    total += (w / 1000) * p;
                }
            });
            if (details.length) { addToCart(`${title}: ${details.join(' + ')}`, total); alert("ØªÙ…Øª Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø¹Ù„Ø¨Ø©"); }
        }

        function addKg(cat, i) { const p = database[cat][i], s = document.getElementById(`w-${cat}-${i}`); addToCart(p.name, parseFloat(s.value) * p.price, s.options[s.selectedIndex].text); }
        function addPiece(cat, i) { const p = database[cat][i], q = document.getElementById(`q-${cat}-${i}`).value; addToCart(p.name, q * p.price, `${q} Ù‚Ø·Ø¹Ø©`); }

        function addToCart(name, price, titleSuffix = "") {
            cart.push({ name: name + (titleSuffix ? ` (${titleSuffix})` : ""), price: price });
            saveCart();
            updateUI();
            const btn = document.getElementById('cart-btn');
            btn.classList.add('animate__animated', 'animate__rubberBand');
            setTimeout(() => btn.classList.remove('animate__animated', 'animate__rubberBand'), 1000);
        }

        function updateUI() { document.getElementById('cart-count').innerText = cart.length; }
        function saveCart() { localStorage.setItem('oudelle_cart', JSON.stringify(cart)); }

        function showCart() {
            const m = document.getElementById('cartModal');
            m.style.display = (m.style.display === 'flex') ? 'none' : 'flex';
            if (m.style.display === 'flex') {
                document.getElementById('cart-list').innerHTML = cart.map((it, i) => `<div style="display:flex; justify-content:space-between; border-bottom:1px solid #eee; padding:5px;">${it.name} <span>${it.price.toFixed(2)} Ø¬ <button onclick="remove(${i})" style="color:red; border:none; background:none; cursor:pointer;">ğŸ—‘ï¸</button></span></div>`).join('');
                updateTotal();
            }
        }

        function remove(i) { cart.splice(i, 1); saveCart(); updateUI(); showCart(); }

        function toggleFields() {
            const m = document.getElementById('del-method').value;
            document.getElementById('dinein-field').classList.toggle('hidden', m !== 'dinein');
            document.getElementById('delivery-field').classList.toggle('hidden', m !== 'delivery');
            document.getElementById('phone-field').classList.toggle('hidden', m === 'dinein');
            document.getElementById('instapay-ui').style.display = (m === 'dinein') ? 'none' : 'block';
            updateTotal();
        }

